<RelativeLayout android:id="@+id/widget_frame"
	android:clickable="true" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:id="@+id/agenda_frame"
		android:background="@drawable/calendar_days_base"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginTop="6dip" android:layout_marginBottom="6dip"
		android:layout_marginLeft="8dip" android:layout_marginRight="8dip">
		<RelativeLayout android:id="@+id/image_frame"
			android:layout_width="72dip" android:layout_height="fill_parent"
			android:gravity="center_horizontal|center_vertical"
			android:paddingBottom="9dip" android:paddingTop="9dip">
			<ImageView android:id="@+id/calendar_item"
				android:background="@drawable/calendar_icon_06"
				android:layout_height="fill_parent" android:gravity="center_horizontal|center_vertical"
				android:layout_width="fill_parent" android:layout_marginLeft="9dip"
				android:scaleType="fitXY" />
			<RelativeLayout android:id="@+id/cal_agenda_text"
				android:layout_marginLeft="9dip" android:layout_width="fill_parent"
				android:layout_height="27dip">
				<TextView android:layout_height="fill_parent" android:id="@+id/month_agenda"
					android:textSize="12sp" android:visibility="visible"
					android:textColor="@color/white" android:gravity="center_horizontal|bottom"
					android:layout_width="fill_parent"></TextView>
			</RelativeLayout>
			<TextView android:id="@+id/day_agenda" android:layout_width="fill_parent"
				android:textSize="21sp" android:visibility="visible"
				android:layout_marginLeft="9dip" android:textStyle="bold"
				android:textColor="@color/black" android:gravity="center_horizontal|center_vertical"
				android:layout_height="fill_parent" android:layout_below="@+id/cal_agenda_text"
				android:layout_marginBottom="5dip"></TextView>
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent" android:layout_centerVertical="true"
			android:id="@+id/text_frame" android:layout_height="fill_parent" android:gravity="center_vertical"
			android:layout_toRightOf="@+id/image_frame">
			<TextView android:textSize="18.0sp" android:textColor="@color/white"
				android:gravity="center" android:id="@+id/empty_msg"
				android:paddingLeft="20.0dip" android:paddingRight="20.0dip"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:text="@string/emptyMsg"/>
			<RelativeLayout android:id="@+id/event_view" android:layout_centerVertical="true"
				android:visibility="invisible" android:layout_width="fill_parent" android:gravity="center_vertical"
				android:layout_height="fill_parent" android:layout_marginRight="5dip">
				<RelativeLayout android:id="@+id/event_view_text"
					android:gravity="center_vertical" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_centerVertical="true"
					android:layout_marginLeft="12.0dip">
					<RelativeLayout android:id="@+id/event_top_line" android:layout_height="17dip"
						android:layout_width="fill_parent">
						<TextView android:textSize="14sp" android:textStyle="normal"
							android:textColor="@color/gray" android:ellipsize="none"
							android:gravity="left" android:id="@+id/when"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:singleLine="true" android:layout_alignParentLeft="true"
							android:layout_marginRight="5dip"/>
						<ImageView android:src="@drawable/ic_menu_revert" android:scaleType="fitEnd" android:id="@+id/widgetGoBackToFirst"
							android:layout_alignParentRight="true" android:layout_alignRight="@+id/event_top_line" 
							android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
					</RelativeLayout>
					<TextView android:textSize="21sp" android:textStyle="bold"
						android:textColor="@color/white" android:gravity="left"
						android:id="@+id/item_title" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_below="@+id/event_top_line"
						android:singleLine="true" />
					<RelativeLayout android:id="@+id/event_bottom_line"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:layout_below="@+id/item_title">
						<TextView android:textSize="14sp" android:textStyle="normal"
							android:textColor="@color/gray" android:gravity="left"
							android:id="@+id/where" android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:singleLine="true"
							android:layout_toLeftOf="@+id/event_num" android:layout_alignParentLeft="true"
							android:layout_marginRight="5dip" />
						<TextView android:textSize="10sp" android:textStyle="normal"
							android:textColor="@color/white" android:gravity="right"
							android:layout_alignParentRight="true" android:id="@+id/event_num"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:singleLine="true" android:paddingTop="4dip" />
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout android:id="@+id/event_view_text_no_loc"
					android:layout_width="fill_parent" android:visibility="invisible"
					android:layout_height="wrap_content" android:layout_centerVertical="true"
					android:layout_marginLeft="12.0dip" android:gravity="center_vertical">
					<RelativeLayout android:id="@+id/event_top_line_no_loc" android:layout_height="17dip"
						android:layout_width="fill_parent">
						<TextView android:textSize="14sp" android:textStyle="normal"
							android:textColor="@color/gray"
							android:gravity="left" android:id="@+id/when_no_loc"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:singleLine="true" android:layout_alignParentLeft="true"
							android:layout_marginRight="5dip"/>
						<ImageView android:src="@drawable/ic_menu_revert" android:scaleType="fitEnd" android:id="@+id/widgetGoBackToFirstNoLoc"
							android:layout_alignParentRight="true" android:layout_alignRight="@+id/event_top_line_no_loc" 
							android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
					</RelativeLayout>
					<TextView android:textSize="21sp" android:textStyle="bold"
						android:textColor="@color/white" android:gravity="left"
						android:id="@+id/item_title_no_loc" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_below="@+id/event_top_line_no_loc"
						android:singleLine="true" />
					<TextView android:textSize="10sp" android:textStyle="normal"
						android:textColor="@color/white" android:gravity="right"
						android:id="@+id/event_num_no_loc" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_below="@+id/item_title_no_loc"
						android:singleLine="true" android:paddingTop="4dip" />
				</RelativeLayout>
			</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>