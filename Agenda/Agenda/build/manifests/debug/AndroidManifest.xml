<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="24" android:versionName="2.1.0" package="org.reber.agenda">

    <uses-permission android:name="android.permission.READ_CALENDAR"/>

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="17">
    </uses-sdk>

    <application android:icon="@drawable/icon" android:label="@string/appName">
        <activity android:configChanges="keyboardHidden|orientation" android:label="@string/appName" android:name="org.reber.agenda.AgendaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="keyboardHidden|orientation" android:label="@string/appSettings" android:name="org.reber.agenda.SettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.CHOOSER"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="keyboardHidden|orientation" android:label="AgndaWidgetConfig" android:name="org.reber.agenda.AgendaConfigure" android:theme="@android:style/Theme.DeviceDefault.DialogWhenLarge.NoActionBar">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver android:label="@string/appName" android:name="org.reber.agenda.AgendaWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="org.reber.agenda.AGENDA_WIDGET_UPDATE"/>
                <action android:name="org.reber.agenda.AGENDA_WIDGET_NEXT_EVENT"/>
            </intent-filter>

            <meta-data android:name="android.appwidget.provider" android:resource="@xml/agendaappwidget"/>
        </receiver>
    </application>

</manifest>
